{
  // https://derekworthen.com/posts/authoring-typescript-libraries/
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
      "module": "ES6", // "UMD", "CommonJS"
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "target": "ES6",
      "outDir": "./lib/esm",
      "sourceMap": true,
      "allowJs": true,
      "declaration": true,
      "declarationDir": "./lib/typings",
      "moduleResolution": "node"
  },
  "files": ["src/index.js"],
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "stories",
      "test",
      "node_modules",
      "**/*.spec.ts",
      "types"
  ]
}
